<div data-id="{{id}}" data-select="{{select}}" class="item">
  <h2 class="title-recipe">{{title}}</h2>
  <div class="block">
    <p class="recipe">{{text}}</p>
    <div class="action">
      <button class="delete button" data-action="remove">Delete</button>
      <button class="edit button" data-action="edit">Edit</button>
    </div>
  </div>
</div>